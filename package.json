{
  "name": "glissando",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:prepare": "cd packages/test-glissando && npm install && cd - && cd packages/test-glissando-helpers && npm install",
    "deps": "npm run deps --workspaces --if-present && npm install",
    "prepare:patch": "npm version patch && npm version patch --workspaces"
  },
  "devDependencies": {
    "npm-check-updates": "^16.6.2",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1",
    "prettier": "2.8.4",
    "rimraf": "^3.0.2",
    "rollup-plugin-filesize": "^9.1.1",
    "shelljs": "^0.8.5",
    "start-server-and-test": "^1.14.0",
    "typescript": "^4.4.4"
  },
  "resolutions": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "version": "0.8.5"
}
