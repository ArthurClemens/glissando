{
  "name": "glissando-mithril",
  "version": "0.7.1",
  "description": "A simple content slider for anything that needs to move. Mitril version.",
  "main": "dist/glissando-mithril",
  "module": "dist/glissando-mithril.mjs",
  "type": "module",
  "scripts": {
    "build": "npm run build:clean && npm run build:module && npm run build:umd && npm run build:css && npm run build:prettier",
    "build:clean": "rm -rf dist/*.js",
    "build:module": "MODULE=1 MODULE_NAME=glissandoMithril ../../node_modules/rollup/dist/bin/rollup -c ../../scripts/rollup.config.js",
    "build:umd": "MODULE=0 MODULE_NAME=glissandoMithril ../../node_modules/rollup/dist/bin/rollup -c ../../scripts/rollup.config.js",
    "build:css": "cp ./node_modules/glissando/dist/*.css dist/",
    "build:prettier": "../../node_modules/prettier/bin-prettier.js --config ../../.prettierrc.json --write \"./dist/*.js\"",
    "typecheck": "../../node_modules/typescript/bin/tsc --p tsconfig.json",
    "test": "react-scripts test --env=jsdom",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./src",
    "prettier": "../../node_modules/prettier/bin-prettier.js --config ../../.prettierrc.json --write \"./src/*.{mjs,css}\"",
    "fix": "yarn run lint --fix && yarn run prettier",
    "size": "size-limit",
    "size:why": "size-limit --why"
  },
  "size-limit": [
    {
      "path": "dist/glissando-mithril.js"
    }
  ],
  "files": [
    "dist",
    "index.d.ts",
    "README.md"
  ],
  "author": "Arthur Clemens <arthurclemens@gmail.com> (http://visiblearea.com)",
  "homepage": "https://github.com/ArthurClemens/glissando",
  "license": "MIT",
  "dependencies": {
    "glissando": "^0.7.1"
  },
  "peerDependencies": {
    "mithril": ">=2.0.4"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.5.0",
    "@types/mithril": "^2.0.3",
    "size-limit": "^4.5.0"
  }
}
