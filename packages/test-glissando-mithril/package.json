{
  "name": "test-glissando-mithril",
  "version": "0.6.0",
  "private": true,
  "description": "",
  "keywords": [],
  "scripts": {
    "dev": "npm-run-all --parallel dev:watch dev:serve",
    "dev:serve": "ENTRY=./src/index.ts ../../node_modules/webpack-dev-server/bin/webpack-dev-server.js --config ../../scripts/webpack.config.dev.js --disableHostCheck true --port 3000 --host 0.0.0.0",
    "dev:watch": "ENTRY=./src/index.ts ../../node_modules/webpack/bin/webpack.js --watch --config ../../scripts/webpack.config.dev.js",
    "webpack": "ENTRY=./src/index.ts ../../node_modules/webpack/bin/webpack.js --config ../../scripts/webpack.config.prod.js",
    "build": "npm run build:clean && npm run webpack",
    "build:clean": "rm -rf dist/js/*",
    "serve": "http-server -c-1 -p 8080 dist",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./src",
    "prettier": "../../node_modules/prettier/bin-prettier.js --config ../../.prettierrc.json --write \"./src/**/*.{js,jsx,ts,tsx,css}\"",
    "fix": "yarn run lint --fix && yarn run prettier",
    "typecheck": "../../node_modules/typescript/bin/tsc --p tsconfig.json"
  },
  "dependencies": {
    "glissando-mithril": "^0.6.0",
    "mithril": "2.0.4"
  },
  "devDependencies": {
    "@types/mithril": "^2.0.2",
    "http-server": "^0.12.1",
    "npm-run-all": "^4.1.5"
  },
  "browserslist": [
    "defaults",
    "IE 11"
  ]
}
